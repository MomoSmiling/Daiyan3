<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blueBrackground"
    tools:context="com.daiyan.momoliu.daiyan.HomePage.HeadlineBarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:text="关注"/>


        <TextView
            android:id="@+id/recommendation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="推荐"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/recommendationTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#煎饼果子"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/recommendationTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#北京"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/recommendationTag3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="#贫困山区"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>

</FrameLayout>
